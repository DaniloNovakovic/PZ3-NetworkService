<UserControl x:Class="PZ3_NetworkService.Views.NetworkDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PZ3_NetworkService.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        
        <!-- Filter bar -->
        <ComboBox Grid.Row="0" Grid.Column="0">
            <ComboBoxItem IsSelected="True">ComboBox Item #1</ComboBoxItem>
            <ComboBoxItem>ComboBox Item #2</ComboBoxItem>
        </ComboBox>
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="Id" Grid.Column="0" HorizontalContentAlignment="Right"/>
            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                <RadioButton IsChecked="True">&lt;</RadioButton>
                <RadioButton>&gt;</RadioButton>
            </StackPanel>
            <TextBox Text="#" Grid.Column="2" HorizontalContentAlignment="Left"/>
        </Grid>
        <Button Content="Filter" Grid.Row="0" Grid.Column="2"/>
        
        <!-- Data grid / table part -->
        <DataGrid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
        </DataGrid>
        
        <!-- Add / Delete data part -->
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="Id:" Grid.Row="0" Grid.Column="0"/>
            <TextBox Text="Id" Grid.Row="0" Grid.Column="1"/>
            
            <Label Content="Name:" Grid.Row="1" Grid.Column="0"/>
            <TextBox Text="Name" Grid.Row="1" Grid.Column="1"/>
            
            <Label Content="Type:" Grid.Row="2" Grid.Column="0"/>
            <TextBox Text="Type" Grid.Row="2" Grid.Column="1"/>
            <Image Grid.Row="1" Grid.RowSpan="2" Grid.Column="2"/>
        </Grid>
        <StackPanel Grid.Row="2" Grid.Column="2">
            <Button Content="Add"/>
            <Button Content="Delete"/>
        </StackPanel>
    </Grid>
</UserControl>
